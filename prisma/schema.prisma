// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id                BigInt    @id @default(autoincrement())
  code              String    @unique
  username          String    @unique
  email             String    @unique
  password          String?
  account_type      Int
  email_verified_at DateTime?
  status            String
  remember_token    String    @unique
  created_at        DateTime
  updated_at        DateTime
  deleted_at        DateTime?
}

model user_informations {
  id           BigInt    @id @default(autoincrement())
  user_id      BigInt
  first_name   String?
  last_name    String?
  gender       String?
  phone_number String?
  address      String?
  profile      String?
  created_at   DateTime
  updated_at   DateTime
  deleted_at   DateTime?
}

model companies {
  id             BigInt    @id @default(autoincrement())
  user_id        BigInt
  name           String
  description    String
  category       String
  industries     String
  address        String
  website        String
  email_address  String
  contact_number String
  settings       String?
  status         String    @default("not_verified")
  created_at     DateTime
  updated_at     DateTime
  deleted_at     DateTime?
}

model pitches {
  id         BigInt    @id @default(autoincrement())
  user_id    BigInt
  company_id BigInt
  url        String
  type       String
  created_at DateTime
  updated_at DateTime
  deleted_at DateTime?
}

model teams {
  id         BigInt    @id @default(autoincrement())
  user_id    BigInt
  company_id BigInt
  position   String
  about      String
  video      String
  created_at DateTime
  updated_at DateTime
  deleted_at DateTime?
}

model services {
  id          BigInt    @id @default(autoincrement())
  user_id     BigInt
  company_id  BigInt
  title       String
  description String
  video       String
  created_at  DateTime
  updated_at  DateTime
  deleted_at  DateTime?
}

model achievements {
  id          BigInt    @id @default(autoincrement())
  user_id     BigInt
  company_id  BigInt
  title       String
  description String
  link        String
  created_at  DateTime
  updated_at  DateTime
  deleted_at  DateTime?
}
