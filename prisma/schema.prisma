// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id                String    @id @default(uuid())
  username          String    @unique
  email             String    @unique
  password          String?
  account_type      Int
  email_verified_at DateTime?
  status            String
  remember_token    String?   @db.LongText
  created_at        DateTime
  updated_at        DateTime
  deleted_at        DateTime?
}

model user_informations {
  id           String    @id @default(uuid())
  user_id      String
  first_name   String?
  last_name    String?
  gender       String?
  phone_number String?
  address      String?
  profile      String?   @db.LongText
  created_at   DateTime
  updated_at   DateTime
  deleted_at   DateTime?
}

model companies {
  id             String    @id @default(uuid())
  user_id        String
  name           String
  description    String    @db.LongText
  category       String
  industries     String    @db.LongText
  address        String
  website        String
  email_address  String
  contact_number String
  settings       String?   @db.LongText
  status         String    @default("not_verified")
  created_at     DateTime
  updated_at     DateTime
  deleted_at     DateTime?
}

model pitches {
  id         String    @id @default(uuid())
  user_id    String
  company_id String
  url        String    @db.LongText
  type       String
  created_at DateTime
  updated_at DateTime
  deleted_at DateTime?
}

model teams {
  id         String    @id @default(uuid())
  user_id    String
  company_id String
  position   String
  about      String    @db.LongText
  video      String    @db.LongText
  created_at DateTime
  updated_at DateTime
  deleted_at DateTime?
}

model services {
  id          String    @id @default(uuid())
  user_id     String
  company_id  String
  title       String    @db.LongText
  description String    @db.LongText
  video       String    @db.LongText
  created_at  DateTime
  updated_at  DateTime
  deleted_at  DateTime?
}

model achievements {
  id          String    @id @default(uuid())
  user_id     String
  company_id  String
  title       String    @db.LongText
  description String    @db.LongText
  link        String    @db.LongText
  created_at  DateTime
  updated_at  DateTime
  deleted_at  DateTime?
}
